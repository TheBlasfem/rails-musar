<h1>Lista de obras</h1>

<div class="row">
	<% @obras.each do |obra| %>

	<div class="col-md-3 col-sm-4 col-xs-6">
		<%= link_to image_tag(obra.imagen, :class=>"img-responsive"), obra_path(obra) %> 
		<%= obra.titulo %>
	</div>

	<% end %>
</div>
<br>

<%= link_to 'Nueva Obra', new_obra_path, :class=>"btn btn-primary btn-lg" %>
